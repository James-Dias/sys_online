<% if notice %>
  <%= javascript_tag "$.notify( { message: '#{notice}'}, { type: 'success', delay: 2000, placement: { from: 'top', align: 'center' }});" %>
<% end %>

<% if alert %>
    <%= javascript_tag "$.notify( { message: '#{alert}'}, { type: 'danger', delay: 2000, placement: { from: 'top', align: 'center' }});" %>
<% end %>
