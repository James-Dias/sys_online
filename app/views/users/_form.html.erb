<%= form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cpf, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :cpf, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rg, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :rg, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone1, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone1, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone2, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone2, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :kind, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :kind, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :image, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nickname, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :nickname, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :neighborhood, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :neighborhood, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :city, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zone, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :zone, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :occupation, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :occupation, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  users_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
